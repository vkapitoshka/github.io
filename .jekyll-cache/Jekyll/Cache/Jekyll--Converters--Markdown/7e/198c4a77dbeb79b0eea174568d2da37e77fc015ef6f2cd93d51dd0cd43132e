      <th style="text-align: right">Заголовок3</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td style="text-align: left">ячейка1</td>
      <td style="text-align: center">ячейка2</td>
      <td style="text-align: right">ячейка3</td>
    </tr>
    <tr>
      <td style="text-align: left">ячейка4</td>
      <td style="text-align: center">ячейка5</td>
      <td style="text-align: right">ячейка6</td>
    </tr>
  </tbody>
  <tbody>
    <tr>
      <td style="text-align: left">ячейка1</td>
      <td style="text-align: center">ячейка2</td>
      <td style="text-align: right">ячейка3</td>
    </tr>
    <tr>
      <td style="text-align: left">ячейка4</td>
      <td style="text-align: center">ячейка5</td>
      <td style="text-align: right">ячейка6</td>
    </tr>
  </tbody>
  <tfoot>
    <tr>
      <td style="text-align: left">Низ1</td>
      <td style="text-align: center">Низ2</td>
      <td style="text-align: right">Низ3</td>
    </tr>
  </tfoot>
</table>

